{
    "name": "accelade/pages",
    "description": "Build structured pages with consistent layouts, headers, footers, and slots for Laravel applications",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "accelade",
        "pages",
        "layouts",
        "blade-components",
        "admin-panel"
    ],
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "illuminate/support": "^11.0|^12.0",
        "accelade/accelade": "^1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\Pages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\Pages\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --no-coverage",
        "test:coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "format:test": "vendor/bin/pint --test",
        "mago": "../../mago lint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\Pages\\PagesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
